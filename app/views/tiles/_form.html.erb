<%= form_with(model: tile) do |form| %>
  <% if tile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tile.errors.count, "error") %> prohibited this tile from being saved:</h2>

      <ul>
        <% tile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :mine, style: "display: block" %>
    <%= form.check_box :mine %>
  </div>

  <div>
    <%= form.label :revealed, style: "display: block" %>
    <%= form.check_box :revealed %>
  </div>

  <div>
    <%= form.label :flagged, style: "display: block" %>
    <%= form.check_box :flagged %>
  </div>

  <div>
    <%= form.label :x_pos, style: "display: block" %>
    <%= form.number_field :x_pos %>
  </div>

  <div>
    <%= form.label :y_pos, style: "display: block" %>
    <%= form.number_field :y_pos %>
  </div>

  <div>
    <%= form.label :total_surrounding_mines, style: "display: block" %>
    <%= form.number_field :total_surrounding_mines %>
  </div>

  <div>
    <%= form.label :board_id, style: "display: block" %>
    <%= form.text_field :board_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
